@model CategoryVM           
@{
    ViewBag.Title = "Edit Category";
}

<h2>Edit Category</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div class="row">

    <div class="large-6 columns">
        @using (Html.BeginForm()) {
            @Html.ValidationSummary(true)
            @Html.HiddenFor(m => m.CategoryId)
            @Html.HiddenFor(m => m.Sequence)
            @Html.HiddenFor(m => m.HtmlId)

            
            <div class="editor-label">
                @Html.LabelFor(model => model.MenuName)
            
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(model => model.MenuName)
                @Html.EditorFor(model => model.MenuName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.PageTitle)
            </div>
            <div class="editor-field">
                @Html.ValidationMessageFor(model => model.PageTitle)
                @Html.EditorFor(model => model.PageTitle)
            </div>

            <div class="editor-field">
                @Html.CheckBoxFor(model => model.DisplayToPublic) @Html.LabelFor(model => model.DisplayToPublic)
            </div>


            <ul class="button-group">
                <li><input class="button" type="submit" value="Save" /></li>
                <li>@Html.ActionLink("Cancel", "Details", "Category", new { ID = Model.CategoryId }, new { @class = "button" })</li>
            </ul>
        }
    </div>

    <div class="large-6 columns">
        
    </div>

</div>