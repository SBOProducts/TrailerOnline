@model TrailerOnline.Models.LoginModel

@{
    ViewBag.Title = "Log in";
}

<div class="row">
    <div class="large-4 columns">
        <h1>@ViewBag.Title</h1>

        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName)
                        
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)

            <p>
                <input type="submit" value="Login" class="button radius" />
            </p>
        }
        <h3>Don't have a Login?</h3>
        <h4>@Html.ActionLink("Register Now", "Register", "Account", new { area = "Service" }, new { @class = "button radius" })</h4>
        
    </div>
</div>
