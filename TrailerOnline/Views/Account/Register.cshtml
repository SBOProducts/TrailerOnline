@model TrailerOnline.Models.CreateWebsiteModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <div class="large-4 columns">
        <h1>@ViewBag.Title</h1>
        <h2>Create a New Website</h2>
       
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary()

            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName)

            @Html.LabelFor(m => m.BusinessName)
            @Html.TextBoxFor(m => m.BusinessName)
            
            @Html.LabelFor(m => m.TenantName)
            @Html.TextBoxFor(m => m.TenantName)
                        
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password)
                        
            @Html.LabelFor(m => m.ConfirmPassword)
            @Html.PasswordFor(m => m.ConfirmPassword)

            

            <p>
                <input type="submit" value="Create Website" class="button radius" />
            </p>
        }
    </div>

    <div class="large-4 columns">
        

        
    </div>
</div>


