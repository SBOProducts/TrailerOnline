@model TrailerOnline.Models.ResendVerificationEmailModel
@{
    ViewBag.Title = "RequestPasswordReset";
}

<div class="row">
    <div class="large-8 columns">
        <section>
            <h2>Request Password Reset</h2>
            <p>
                If you have forgotten your password you may initiate a password reset by entering your 
                email address below. We'll send you a link that can be used to enter a new password. 
            </p>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                
                @Html.TextBoxFor(m => m.EmailAddress, new { placeholder = "Email Address" })
                @Html.ValidationMessageFor(m => m.EmailAddress)

                <p>
                    <input type="submit" class="button radius" value="Submit" />
                </p>
            }
        </section>
    </div>
</div>


